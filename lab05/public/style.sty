body {
        font: 24px Helvetica;
        background: #999999;
}

#main {
	min-height: 800px;
	margin: 0px;
	padding: 0px;
	display: flex;
	flex-flow: row;
}

#main > article {
	margin: 0px;
	padding: 0px;
	border: 1px solid #cccc33;
	background: #dddd88;
	font-size: 20px;
	flex: 3 1 60%;
	order: 2;
}

#main > nav {
	margin: 0px;
	padding: 0px;
	border: 1px solid #8888bb;
	background: #ccccff;
	font-size: 25px;
	flex: 1 6 20%;
	text-align: right;
	order: 1;
}

#main > aside {
	margin: 0px;
	padding: 0px;
	border: 1px solid #8888bb;
	background: #ccccff;
	flex: 1 6 20%;
	order: 3;
}

header, footer {
	display: block;
	margin: 0px;
	padding: 0px;
	min-height: 100px;
	border: 1px solid #eebb55;
	background: #ffeebb;
	font-size: 30px;
}

/* Too narrow to support three columns */
@media all and (max-width: 640px) {
	#main, #page {
		flex-direction: column;
	}

	/* Return them to document order */
	#main > article, #main > aside {
		order: 0;
	}

	#main > nav, #main > aside, header, footer {
		min-height: 50px;
		max-height: 50px;
	}
	#main > nav
	{
		order: -1;
		text-align: left;
	}
}